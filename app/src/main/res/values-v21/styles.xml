

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/dark_orange</item>
        <item name="colorPrimary">@color/very_orange</item>

        <!-- OverFlow Menu -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButton</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="actionBarDivider">@null</item>

        <!-- OverFlow Menu Text Color -->
        <!-- Inadvertently changes text color for dialog titles -->
        <item name="android:textColor">@color/white</item>


        <!-- Widget colors -->
        <item name="colorAccent">@color/very_orange</item>
        <item name="android:textColorSecondary">@color/very_orange</item>

        <!-- Dialog colors -->
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/very_orange</item>
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <!--<item name="android:colorBackground">@color/black</item>-->

        <!--<item name="android:windowIsFloating">false</item>-->
    </style>



    <!-- ActionBar styles for Text Style, Background-->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/very_orange</item>
        <item name="background">@drawable/actionbar_bk</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar styles for Text Style -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Set Custom Icon for Overflow Button in ActionBar -->
    <style name="OverflowButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">

    </style>

    <!-- OverFlow menu Styles -->
    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:divider">@color/light_orange</item>
        <item name="android:dividerHeight">1dp</item>

        <item name="android:background">@color/very_orange</item>
    </style>

    <color name="transparent">#00000000</color>
    <color name="black">#000000</color>
    <color name="light_grey">#d4d4d4</color>
    <color name="very_orange">#ffaa00</color>
    <color name="dark_orange">#e97501</color>
    <color name="light_orange">#ffd175</color>
    <color name="white">#ffffff</color>
    <color name="red">#FF3333</color>
    <color name="blue">#0055FF</color>
</resources>













